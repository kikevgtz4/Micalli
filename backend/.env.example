# Database Configuration
# For local: postgres://user:pass@localhost:5432/dbname
# For Docker: postgres://postgres:postgres@db:5432/micalli
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Django Settings
SECRET_KEY=generate-a-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Docker Environment Flag
IN_DOCKER=false

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=YourApp <your-email@gmail.com>

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT Settings
JWT_SECRET_KEY=generate-jwt-secret

# Third-party Services (optional)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret